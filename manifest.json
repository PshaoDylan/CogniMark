{
  "manifest_version": 3,
  "name": "QR-ify",
  "version": "1.0",
  "description": "将任意内容生成二维码。",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.svg",
      "48": "images/icon48.svg",
      "128": "images/icon128.svg"
    }
  },
  "icons": {
    "16": "images/icon16.svg",
    "48": "images/icon48.svg",
    "128": "images/icon128.svg"
  },
  "web_accessible_resources": [
    {
      "resources": [ "images/*.svg" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}
